ramp-coreload-1-font = 4
ramp-coreload-1-foreground = #0088CC
ramp-coreload-2 = ▃
ramp-coreload-2-font = 4
ramp-coreload-2-foreground = #0088CC
ramp-coreload-3 = ▄
ramp-coreload-3-font = 4
