index-sort = true
wrapping-scroll = true
;
strip-wsnumbers = true
pin-workspaces = true
;
label-mode-padding = 2
label-mode-foreground = #0088CC
;
label-unfocused-foreground = #555555
label-unfocused-padding = 0
;
